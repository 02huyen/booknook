<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/SavedToBookmarksText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/saved_to_bookmarks"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/dm_serif_display_italic"
        />

    <ImageView
        android:id="@+id/bookCover"
        android:layout_width="70dp"
        android:layout_height="95dp"
        android:background="@color/cardview_dark_background"
        android:layout_gravity="center"
        android:contentDescription="@string/book_cover"
        />
        <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_name"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/AuthorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author_name"
        android:textSize="11sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/AddToBookBoardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_bookboard"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginStart="10sp"
        android:fontFamily="@font/dm_serif_display_regular"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10dp"
        android:id="@+id/recyclerViewChecklist"
        android:scrollbars="vertical"
        />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/done"
       />

</LinearLayout>