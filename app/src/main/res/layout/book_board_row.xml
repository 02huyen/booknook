<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp"
    android:background="@drawable/bookboard_row_background">
    <TextView
        android:id="@+id/BoardTitle"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textColor="#282828"
        android:fontFamily="@font/dm_serif_display_regular"
        android:text="@string/name_of_board_title_here"
        android:textSize="23sp"
        />
    <ImageView
        android:id="@+id/bookPreview1"
        android:layout_width="39dp"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:background="#c4c4c4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/BoardTitle"/>
    <ImageView
        android:id="@+id/bookPreview2"
        android:layout_width="39dp"
        android:layout_height="58dp"
        android:layout_margin="7dp"
        android:background="#c4c4c4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bookPreview1"/>
    <ImageView
        android:id="@+id/bookPreview3"
        android:layout_width="39dp"
        android:layout_height="58dp"
        android:layout_margin="7dp"
        android:background="#c4c4c4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bookPreview2"/>
    <ImageView
        android:id="@+id/bookPreview4"
        android:layout_width="39dp"
        android:layout_height="58dp"
        android:layout_margin="7dp"
        android:background="#c4c4c4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bookPreview3"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>